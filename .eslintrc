{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:mocha/recommended"
    ],
    "rules": {
        "quotes": [2, "single"],
        "eqeqeq": 2,
        "curly": 2,
        "camelcase": 2,
        "no-var": 2,
        "no-unused-vars": 2,
        "no-console": 0,
        "max-len": [2, 240, 4],
        "semi": [2, "always"],
        "strict": 0,
        "mocha/no-exclusive-tests": "error"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "mocha"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "globals": {
        "window": true
    }
}